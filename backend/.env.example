# Bitwarden Configuration
BITWARDEN_CLI_PATH=/usr/local/bin/bw
BITWARDEN_CLI_TIMEOUT_SECONDS=30

# Docker Configuration
DOCKER_HOST=unix:///run/user/1000/docker.sock

# Session Configuration
SESSION_TIMEOUT_MINUTES=30

# Catalog Configuration
CATALOG_CACHE_TTL_SECONDS=3600
CATALOG_DOCKER_URL=https://api.github.com/repos/docker/mcp-registry/contents/servers
CATALOG_OFFICIAL_URL=https://registry.modelcontextprotocol.io/v0/servers
# Deprecated (use CATALOG_DOCKER_URL instead):
# CATALOG_DEFAULT_URL=https://api.github.com/repos/docker/mcp-registry/contents/servers
# Optional GitHub token for rate limit relief
GITHUB_TOKEN=

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# OAuth Configuration
# OAUTH_ALLOW_OVERRIDE=false
# OAUTH_ALLOWED_DOMAINS は本番環境で必須。未設定の場合すべてのOAuth URLが拒否されます。
OAUTH_ALLOWED_DOMAINS=github.com
# OAUTH_TOKEN_ENCRYPTION_KEY=<generate_with_python_fernet>
# OAUTH_CLIENT_SECRET=

# Remote MCP Configuration
# REMOTE_MCP_ALLOWED_DOMAINS=api.example.com,*.trusted.com
REMOTE_MCP_ALLOWED_DOMAINS=
REMOTE_MCP_MAX_CONNECTIONS=20
ALLOW_INSECURE_ENDPOINT=false

# Application Configuration
LOG_LEVEL=INFO
LOG_REQUEST_BODY=false
