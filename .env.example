# Production Environment Variables
# Copy this file to .env and update with your values

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_CATALOG_URL=https://api.github.com/repos/docker/mcp-registry/contents/servers

# Backend Configuration
BITWARDEN_CLI_PATH=/usr/local/bin/bw
BITWARDEN_CLI_TIMEOUT_SECONDS=30
CATALOG_CACHE_TTL_SECONDS=3600
# カタログ一覧のデフォルト取得先 (必要に応じて Raw URL 等に差し替え可)
CATALOG_DEFAULT_URL=https://api.github.com/repos/docker/mcp-registry/contents/servers
DOCKER_HOST=unix:///run/user/1000/docker.sock
# GitHub API token (optional, for rate limit relief)
GITHUB_TOKEN=
SESSION_TIMEOUT_MINUTES=30

# Security
CORS_ORIGINS=https://yourdomain.com

# Logging
LOG_LEVEL=WARNING
LOG_REQUEST_BODY=false
