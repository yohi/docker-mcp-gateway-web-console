# Production Environment Variables
# Copy this file to .env and update with your values

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_CATALOG_URL=https://api.github.com/repos/docker/mcp-registry/contents/servers

# Backend Configuration
BITWARDEN_CLI_PATH=/usr/local/bin/bw
BITWARDEN_CLI_TIMEOUT_SECONDS=30
DOCKER_HOST=unix:///var/run/docker.sock
SESSION_TIMEOUT_MINUTES=30
CATALOG_CACHE_TTL_SECONDS=3600
CATALOG_DEFAULT_URL=https://api.github.com/repos/docker/mcp-registry/contents/servers
# GitHub API token (optional, for rate limit relief)
GITHUB_TOKEN=

# Security
CORS_ORIGINS=https://yourdomain.com

# Logging
LOG_LEVEL=WARNING
LOG_REQUEST_BODY=false

# Optional: Default Catalog URL
# CATALOG_DEFAULT_URL=https://raw.githubusercontent.com/example/mcp-catalog/main/catalog.json
